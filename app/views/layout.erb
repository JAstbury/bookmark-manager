<!DOCTYPE html>
<html>
  <head>
    <title>Bookmark Manager</title>
  </head>

  <body>
    <% if current_user %>
      Hello, <%= current_user.email %>
    <% end %>

    <% if flash[:errors] && !flash[:errors].empty? %>
      <div id="notice">
        Please refer to errors below:
        <ul id="errors">
          <% flash[:errors].each do |error|%>
          <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
